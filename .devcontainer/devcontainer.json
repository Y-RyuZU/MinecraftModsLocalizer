// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
  "name": "Minecraft Mods Localizer Container",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "dockerComposeFile": "docker-compose.yaml",
  "service": "devcontainer",
  // Features to add to the dev container. More info: https://containers.dev/features.
  // "features": {},

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],

  // Use 'postCreateCommand' to run commands after the container is created.
  // "postCreateCommand": "pip3 install --user -r requirements.txt",

  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  },

  // Configure tool-specific properties.
  "customizations": {
    "jetbrains": {
      "backend": "PyCharm",
      "plugins": [
        "Jetbrains TeamCity Plugin",
        "Key Promoter X",
        "cn.yiiguxing.plugin.translate",
        "com.chylex.intellij.inspectionlens",
        "com.dsoftware.ghtoolbar",
        "com.github.camork.fileExpander",
        "com.github.jk1.ytplugin",
        "com.github.yunabraska.githubworkflowplugin",
        "com.intellij.mermaid",
        "com.intellij.ml.llm",
        "com.jetbrains.space",
        "com.jetbrains.writerside",
        "com.mzyupc.a-redis",
        "com.nasller.CodeGlancePro",
        "indent-rainbow.indent-rainbow",
        "io.plugin.tsnode",
        "izhangzhihao.rainbow.brackets",
        "izhangzhihao.rainbow.brackets.lite",
        "mobi.hsz.idea.gitignore",
        "org.intellij.plugins.hcl",
        "org.jetbrains.plugins.github",
        "org.jetbrains.plugins.gitlab",
        "zielu.gittoolbox",
        "com.crunch42.openapi",
        "net.seesharpsoft.intellij.plugins.csv",
        "com.intellij.swagger",
      ]
    }
  },
  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}
